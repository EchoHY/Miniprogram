<!--pages/maishu/maishu.wxml-->
<view class="container">
<form bindsubmit='formSubmit' >

<button bindtap='iwantcode'>扫描图书二维码</button>
<text name="isbn">{{isbn}}</text>
<button bindtap='iwantpic'>图书真照</button>
<image   src="{{img}}" style="display:{{display1}}"></image>
<switch checked bindchange='switch1' name="rentbtn"/>出租
图书每日租价:<input type='digit' name="borrow" maxlength='5' disabled="{{input1}}"/>
<switch bindchange='switch2' name="sellbtn"/>出售
图书出售价格:<input type="digit" name="buy" maxlength='10000' disabled="{{input2}}"/>
联系电话:<input name="phone" type="number" value="{{phone}}" maxlength='11'/>
<button form-type='submit' type="primary">提交</button>


</form>
</view>
<view class="modal-box" hidden="{{userinfo_hidden}}">
    <view class="modal-body">
      <view class="modal-content">
        <form bindsubmit='userSubmit'>
          手机号码
          <input type='number' name="tel" value="{{tel}}" /> 性别
          <radio-group name="sex">
            <radio value="man" checked="{{checked_man}}" />男
            <radio value="woman" checked="{{checked_woman}}" />女
          </radio-group>
          <picker name="grade" range='{{array}}' value="{{index}}" bindchange='bindchange'>
            <view>你的年级：{{array[index]}}</view>
          </picker>
          <button form-type='submit' type="primary">提交</button>
        </form>
      </view>
    </view>
  </view>
  <toast hidden="{{hidden}}" duration="1000" bindchange="toastChange">提交成功</toast>