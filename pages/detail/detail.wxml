<view>
  <image src="{{picture1}}" class="top-img" mode="aspectFit"></image>
  <image src="{{picture2}}" class="top-img" mode="aspectFit"></image>
  <view>图书名称:{{name}}</view>
         <view class="line"></view>
  <view>书后ISBN号:{{information}}</view>
          <view class="line"></view>
  <view class="price">
    <view class="tag" hidden="{{rentpriceHidden}}">租价:{{rentprice}}元/天</view>
    <view class="tag" hidden="{{salepriceHidden}}">售价:{{saleprice}}元</view>
    
  </view>
        
  <view class='container'>
    <form bindsubmit='userCheck'>
    <view class="buyrent"><text style="font-weight:bold">买书</text>
      <switch name="way" checked="{{canIChange}}" disabled="{{disabled}}" bindchange="rorChange"></switch><text style="font-weight:bold">租书</text>
      </view>
      <text hidden="{{peroid_hidden}}">租书时长</text>
      <input type="number"  name="peroid" hidden="{{peroid_hidden}}" class="input"placeholder="单位/天"/>
      <button form-type='submit' type="primary">下单!</button>
    </form>
  </view>
  <view class="modal-box" hidden="{{userinfo_hidden}}">
    <view class="modal-body">
      <view class="menu">
        <form bindsubmit='userSubmit' >
          手机号码
          <input type='number' name="tel" value="{{tel}}" /> 性别
          <radio-group name="sex">
            <radio value="man" checked="{{checked_man}}" />男
            <radio value="woman" checked="{{checked_woman}}" />女
          </radio-group>
          <picker name="grade" range='{{array}}' value="{{index}}" bindchange='bindchange'>
            <view>你的年级：{{array[index]}}</view>
          </picker>
          <button form-type='submit' style="margin-left:auto" type="primary">提交</button>
        </form>
      </view>
    </view>
  </view>
  <toast hidden="{{hidden}}" duration="1000" bindchange="toastChange">提交成功</toast>
</view>