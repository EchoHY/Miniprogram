<view class="">
   <view class="scan">
<view class="search-input">
            <input class="serach-text" placeholder="搜索商品" />
        </view>
   </view>
    <view class="section">
          <scroll-view class="posts-list" style="height:570px" scroll-y="true" bindscrolltolower="lower">
                <block wx:for="{{postsList}}" wx:key="unique">
                    <view class="stuff">
                        <view class="viww-list" index="{{index}}"  data-suitid="{{item.bookindex}}" catchtap="redictDetail">
                          <view class="wenzi">
                            <text>图书名称:{{item.name}}</text>
                            <text>交易方式:{{item.way}}</text>
                            <text>出租价格:{{item.rentprice}}</text>
                            <text>出售价格:{{item.saleprice}}</text>
                          </view>
                          <image  class="img" src="{{item.imgUrl}}" mode="scaleToFill"></image>
                        </view>
                    </view>
                 </block>
          </scroll-view>
          <loading hidden="{{hidden}}">
                加载中...
          </loading>
          <toast hidden="{{allStuff}}"duration="1000" bindchange="hiddenAllStuff">您已浏览全部商品</toast>
    </view>
</view>