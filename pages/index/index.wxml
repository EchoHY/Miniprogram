<view class="search">
  <input bindconfirm='search' placeholder="搜索商品" maxlength='30'/>
</view>
<view class="container">
  <scroll-view style="height:1100rpx" scroll-y="true" bindscrolltolower="lower">
    <block wx:for="{{postsList}}" wx:key="unique">
      <view class="stuff" index="{{index}}" data-bookid="{{item.id}}" catchtap="redictDetail">
        <view class="wenzi">
          <text>{{item.title}}</text>
          <text>图书ID:{{item.id}}</text>
          <text>状态:{{way[item.way]}}</text>
          <text hidden="{{(item.way===2)?true:false}}">出租价格:{{item.rent_price}}元/天</text>
          <text hidden="{{(item.way===1)?true:false}}">出售价格:{{item.sale_price}}元</text>
        </view>
        <image class="img" src="{{item.picture}}" mode="scaleToFill"></image>
      </view>
    </block>
  </scroll-view>
</view>